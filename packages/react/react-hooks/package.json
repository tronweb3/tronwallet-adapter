{
    "name": "@tronweb3/tronwallet-adapter-react-hooks",
    "version": "1.1.8",
    "description": "A `useWallet()` hook to make it easy to interact with Tron wallets.",
    "keywords": [
        "TRON",
        "TronWeb",
        "adapter"
    ],
    "author": "web3-geek",
    "repository": {
        "type": "git",
        "url": "https://github.com/web3-geek/tronwallet-adapter"
    },
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "test": "jest"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@tronweb3/tronwallet-abstract-adapter": "workspace:^",
        "@tronweb3/tronwallet-adapter-tronlink": "workspace:^"
    },
    "devDependencies": {
        "@types/jest": "^27.5.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "jest-localstorage-mock": "^2.4.22",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "shx": "^0.3.4",
        "typescript": "^5.5.4"
    }
}
