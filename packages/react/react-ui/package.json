{
    "name": "@tronweb3/tronwallet-adapter-react-ui",
    "version": "1.1.8",
    "description": "A set of out-of-the-box components to make it easy to interact with Tron wallets.",
    "keywords": [
        "TRON",
        "TronWeb",
        "adapter"
    ],
    "author": "web3-geek",
    "repository": {
        "type": "git",
        "url": "https://github.com/web3-geek/tronwallet-adapter"
    },
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/esm/index.js",
            "require": "./lib/cjs/index.js",
            "types": "./lib/types/index.d.ts"
        },
        "./style.css": "./style.css"
    },
    "files": [
        "lib",
        "src",
        "LICENSE",
        "style.css"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "test": "jest"
    },
    "peerDependencies": {
        "react": "*",
        "react-dom": "*"
    },
    "dependencies": {
        "@tronweb3/tronwallet-abstract-adapter": "workspace:^",
        "@tronweb3/tronwallet-adapter-react-hooks": "workspace:^"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^16.0.0",
        "@testing-library/user-event": "^13.5.0",
        "@tronweb3/tronwallet-adapter-tronlink": "workspace:^",
        "@types/jest": "^27.5.2",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.0.0",
        "@types/testing-library__jest-dom": "^5.14.5",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.3.1",
        "jest-localstorage-mock": "^2.4.22",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "shx": "^0.3.4"
    }
}
