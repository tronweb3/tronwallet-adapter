{
    "name": "@tronweb3/tronwallet-adapter-walletconnect",
    "version": "3.0.2",
    "description": "Wallet adapter for WalletConnect wallet.",
    "keywords": [
        "TRON",
        "TronWeb",
        "walletconnect"
    ],
    "author": "tronweb3",
    "repository": {
        "type": "git",
        "url": "https://github.com/tronweb3/tronwallet-adapter"
    },
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "build:umd": "node ../../../scripts/build-umd.js"
    },
    "dependencies": {
        "@tronweb3/tronwallet-abstract-adapter": "workspace:^",
        "@tronweb3/walletconnect-tron": "4.0.1",
        "@walletconnect/modal": "2.6.2",
        "@walletconnect/types": "2.21.7"
    },
    "devDependencies": {
        "shx": "0.3.4"
    }
}
