{
    "name": "@tronweb3/tronwallet-adapter-walletconnect",
    "version": "2.0.1",
    "description": "Wallet adapter for WalletConnect wallet.",
    "keywords": [
        "TRON",
        "TronWeb",
        "walletconnect"
    ],
    "author": "web3-geek",
    "repository": {
        "type": "git",
        "url": "https://github.com/web3-geek/tronwallet-adapter"
    },
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "build:umd": "node ../../../scripts/build-umd.js"
    },
    "dependencies": {
        "@tronweb3/tronwallet-abstract-adapter": "workspace:^",
        "@tronweb3/walletconnect-tron": "^3.0.0",
        "@wagmi/core": "^1.1.0",
        "@walletconnect/sign-client": "^2.1.4",
        "@walletconnect/types": "^2.1.4",
        "viem": "^0.3.50"
    },
    "devDependencies": {
        "shx": "^0.3.4"
    }
}
