{
    "name": "@tronweb3/tronwallet-adapter-metamask",
    "version": "1.0.2",
    "description": "Wallet adapter for Metamask wallet extension and app.",
    "keywords": [
        "EVM",
        "Ethereum Wallet",
        "Metamask wallet"
    ],
    "author": "web3-geek",
    "repository": {
        "type": "git",
        "url": "https://github.com/web3-geek/tronwallet-adapter"
    },
    "license": "MIT",
    "type": "module",
    "sideEffects": false,
    "engines": {
        "node": ">=16",
        "pnpm": ">=7"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/types/index.d.ts",
    "exports": {
        "require": "./lib/cjs/index.js",
        "import": "./lib/esm/index.js",
        "types": "./lib/types/index.d.ts"
    },
    "files": [
        "lib",
        "src",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "clean": "shx mkdir -p lib && shx rm -rf lib",
        "package": "shx echo '{ \"type\": \"commonjs\" }' > lib/cjs/package.json",
        "test": "jest",
        "test:coverage": "jest  --coverage",
        "build:umd": "node ../../../scripts/build-umd.js"
    },
    "dependencies": {
        "@tronweb3/abstract-adapter-evm": "workspace:^"
    },
    "devDependencies": {
        "@testing-library/dom": "^8.20.0",
        "jest": "28",
        "jest-environment-jsdom": "28",
        "shx": "^0.3.4"
    }
}
