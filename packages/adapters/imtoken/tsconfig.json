{
    "compilerOptions": {
        "target": "ES2016",
        "module": "ESNext",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "declaration": true,
        "declarationDir": "lib/types",
        "jsx": "react-jsx",
        "jsxImportSource": "preact",
        "skipLibCheck": true,
        "baseUrl": "./",
        "rootDir": ".",
        "paths": {
            "react": ["./node_modules/preact/compat/"],
            "react-dom": ["./node_modules/preact/compat/"]
        }
    }
}
